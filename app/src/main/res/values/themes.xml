        <item name="colorSecondaryContainer">@color/transparent</item>
        <!-- Icono seleccionado -->
        <item name="colorOnSecondaryContainer">?attr/colorPrimary</item>
        <!-- Fondo -->
        <item name="colorSurface">?attr/colorPrimaryVariant</item>

